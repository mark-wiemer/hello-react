{
    "name": "hello-vite",
    "version": "0.1.0",
    "private": true,
    "license": "MIT",
    "type": "module",
    "scripts": {
        "build": "tsc && vite build",
        "ci": "start-server-and-test dev http-get://localhost:8080 playwright",
        "dev": "vite",
        "format": "npm run format:inner -- --check .",
        "format:fix": "npm run format:inner -- --write .",
        "format:inner": "prettier",
        "postinstall": "npx playwright install",
        "lint": "npm run lint:inner -- src && echo No ESLint problems",
        "lint:fix": "npm run lint:inner -- --fix src",
        "lint:inner": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "packagejson": "sort-package-json --check",
        "packagejson:fix": "sort-package-json",
        "playwright": "playwright test",
        "preview": "vite preview",
        "test": "vitest --run",
        "tsc": "tsc && echo No TS problems",
        "validate": "npm run packagejson && npm run format && npm run lint && npm run tsc && npm run test && npm run ci && echo Ready for review :)",
        "validate:fix": "npm run packagejson:fix && npm run format:fix && npm run lint:fix && npm run tsc && npm run test && npm run ci && echo Ready for review :)",
        "watch": "vitest"
    },
    "dependencies": {
        "node": "^18.17.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.37.1",
        "@testing-library/jest-dom": "^6.1.3",
        "@testing-library/react": "^14.0.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/jest": "^29.5.4",
        "@types/react": "^18.2.15",
        "@types/react-dom": "^18.2.7",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "@vitejs/plugin-react": "^4.0.3",
        "eslint": "^8.57.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.3",
        "jsdom": "^22.1.0",
        "prettier": "3.0.3",
        "sort-package-json": "^2.5.1",
        "start-server-and-test": "^2.0.0",
        "typescript": "^5.0.2",
        "vite": "^4.4.5",
        "vitest": "^0.34.3"
    },
    "engines": {
        "node": "^18"
    }
}
